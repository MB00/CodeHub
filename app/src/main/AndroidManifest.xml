<?xml version="1.0" encoding="utf-8"?>

<manifest
    package="mb00.android.codehub"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <uses-permission
        android:name="android.permission.INTERNET"
        />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        >
        <activity
            android:name=".ui.main.view.MainActivity"
            >
            <intent-filter
                >
                <action
                    android:name="android.intent.action.MAIN"
                    />
                <category
                    android:name="android.intent.category.LAUNCHER"
                    />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.login.view.LoginActivity"
            />
        <activity
            android:name=".ui.home.view.HomeActivity"
            />
        <activity
            android:name=".ui.search.view.SearchActivity"
            />
        <activity
            android:name=".ui.user.view.UserActivity"
            />
        <activity
            android:name=".ui.repo.view.RepoActivity"
            />
        <activity
            android:name=".ui.repo.view.RepoFileActivity"
            />
        <activity 
            android:name=".ui.gist.view.GistActivity"
            />
        <activity
            android:name=".ui.gist.view.GistFileActivity"
            />
        <activity
            android:name=".ui.settings.view.SettingsActivity"
            />
        <activity
            android:name=".ui.about.view.AboutActivity"
            />
    </application>

</manifest>
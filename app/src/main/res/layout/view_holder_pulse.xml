<?xml version="1.0" encoding="utf-8"?>

<layout>

    <data>
        <variable
            name="repoViewModel"
            type="mb00.android.codehub.ui.repo.viewmodel.RepoViewModel"
            />
        <variable
            name="userViewModel"
            type="mb00.android.codehub.ui.user.viewmodel.UserViewModel"
            />
    </data>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        >

        <ImageView
            android:id="@+id/pulse_avatar_image_view"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:paddingRight="10dp"
            />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            >

            <TextView
                android:id="@+id/pulse_title_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="18sp"
                />

            <TextView
                android:id="@+id/pulse_time_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                />

        </LinearLayout>

    </LinearLayout>

</layout>